<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="diamante_automation.notification.option_provider.ticket_created.class">Diamante\AutomationBundle\Infrastructure\Notification\OptionProvider\TicketCreated</parameter>
        <parameter key="diamante_automation.notification.option_provider.ticket_updated.class">Diamante\AutomationBundle\Infrastructure\Notification\OptionProvider\TicketUpdated</parameter>
        <parameter key="diamante_automation.notification.option_provider.ticket_removed.class">Diamante\AutomationBundle\Infrastructure\Notification\OptionProvider\TicketRemoved</parameter>
        <parameter key="diamante_automation.notification.option_provider.comment_created.class">Diamante\AutomationBundle\Infrastructure\Notification\OptionProvider\CommentCreated</parameter>
        <parameter key="diamante_automation.notification.option_provider.comment_updated.class">Diamante\AutomationBundle\Infrastructure\Notification\OptionProvider\CommentUpdated</parameter>
        <parameter key="diamante_automation.notification.option_provider.comment_removed.class">Diamante\AutomationBundle\Infrastructure\Notification\OptionProvider\CommentRemoved</parameter>
    </parameters>

    <services>
        <service id="diamante_automation.notification.option_provider.ticket_created" class="%diamante_automation.notification.option_provider.ticket_created.class%">
            <tag name="diamante.notification.options.provider"/>
        </service>

        <service id="diamante_automation.notification.option_provider.ticket_updated" class="%diamante_automation.notification.option_provider.ticket_updated.class%">
            <tag name="diamante.notification.options.provider"/>
        </service>

        <service id="diamante_automation.notification.option_provider.ticket_removed" class="%diamante_automation.notification.option_provider.ticket_removed.class%">
            <tag name="diamante.notification.options.provider"/>
        </service>

        <service id="diamante_automation.notification.option_provider.comment_created" class="%diamante_automation.notification.option_provider.comment_created.class%">
            <tag name="diamante.notification.options.provider"/>
        </service>

        <service id="diamante_automation.notification.option_provider.comment_updated" class="%diamante_automation.notification.option_provider.comment_updated.class%">
            <tag name="diamante.notification.options.provider"/>
        </service>

        <service id="diamante_automation.notification.option_provider.comment_removed" class="%diamante_automation.notification.option_provider.comment_removed.class%">
            <tag name="diamante.notification.options.provider"/>
        </service>
    </services>
</container>